<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tvNadpis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jakou motorku si chcete objednat?"
        android:textSize="20dp"
        android:background="@drawable/rounded_container"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="30dp"/>

        <RadioGroup
        android:id="@+id/Motorka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center">

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m1"
        android:text="Bandit 2005"/>

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation= "vertical"
        android:id="@+id/m2"
        android:text="Bandit 2012"/>

        <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/m3"
        android:text="Bandit 1989"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="16dp"
        android:id="@+id/equipment"
        android:text="Něco do vybavení"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/rounded_container2"/>

    <CheckBox
        android:id="@+id/equipment1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="Vyhřívané rukojeti"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Padáky"
        android:textSize="12dp"
        android:id="@+id/equipment2"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Něco jiného"
        android:textSize="12dp"
        android:id="@+id/equipment3"/>

    <TextView
        android:id="@+id/delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vyber způsob doporučení"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:orientation="vertical"
        android:textAlignment="center"
        android:padding="20dp"
        android:background="@drawable/rounded_container2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/press1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="osobní návštěva"
            android:textSize="12dp"
            android:layout_weight="1"
            android:layout_marginStart="2dp" />

        <CheckBox
            android:id="@+id/press2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="privátní dodávkou"
            android:textSize="12dp"
            android:layout_weight="1"
            android:layout_marginStart="2dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/p1"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:scaleType="centerInside"
            android:src="@drawable/image1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/p2"
            android:src="@drawable/image2"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/p3"
            android:src="@drawable/image3"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Objednat"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/summary"
        android:layout_width="370dp"
        android:layout_height="150dp">
        <TextView
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:text="Souhrn objednávky"
        android:background="@color/lightshadow"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>

</ScrollView>
